<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/edit_home_layout"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_registration_backdrop"/>
        <ImageView
            android:id="@+id/back_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/back_btn"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_des"
            android:textColor="@color/white"
            android:textSize="17sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <LinearLayout
                android:id="@+id/people_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/people1"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="@string/user_name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/user1_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:digits="@string/digst_email"
                    android:hint="@string/user_email"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/user1_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:digits="@string/digst_phone"
                    android:hint="@string/user_phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/people_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/people2"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="@string/user_name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/user2_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:digits="@string/digst_email"
                    android:hint="@string/user_email"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/user2_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:digits="@string/digst_phone"
                    android:hint="@string/user_phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/people_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/people3"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user3_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="@string/user_name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/user3_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:digits="@string/digst_email"
                    android:hint="@string/user_email"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/user3_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:digits="@string/digst_phone"
                    android:hint="@string/user_phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:id="@+id/add_next_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/add_next_people"
                    android:textColor="#497ce6"
                    android:textSize="17sp" />

                <TextView
                        android:id="@+id/save_btn"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/finish_btn"
                        android:text="@string/finish"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:gravity="center"
                        />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
